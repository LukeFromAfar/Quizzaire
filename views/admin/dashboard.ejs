<div class="row mb-4">
    <div class="col-md-12">
        <div class="profile-header">
            <h1>Admin Dashboard</h1>
            <p>Manage users and quizzes</p>
        </div>
    </div>
</div>

<div class="row admin-dashboard">
    <div class="col-md-3">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist">
            <button class="nav-link active" id="v-pills-users-tab" data-bs-toggle="pill" data-bs-target="#v-pills-users" type="button" role="tab">Users</button>
            <button class="nav-link" id="v-pills-quizzes-tab" data-bs-toggle="pill" data-bs-target="#v-pills-quizzes" type="button" role="tab">Quizzes</button>
        </div>
    </div>
    
    <div class="col-md-9">
        <div class="tab-content" id="v-pills-tabContent">
            <!-- Users Tab -->
            <div class="tab-pane fade show active" id="v-pills-users" role="tabpanel" aria-labelledby="v-pills-users-tab">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">User Management</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Joined</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (typeof users !== 'undefined' && users.length > 0) { %>
                                        <% users.forEach(user => { %>
                                            <tr>
                                                <td><%= user.username %></td>
                                                <td><%= user.email %></td>
                                                <td>
                                                    <span class="badge <%= user.role === 'admin' ? 'bg-danger' : 'bg-secondary' %>">
                                                        <%= user.role %>
                                                    </span>
                                                </td>
                                                <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                                <td>
                                                    <% if (user._id.toString() !== currentUser.id) { %> 
                                                        <form action="/users/delete/<%= user._id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                        </form>
                                                    <% } else { %>
                                                        <button type="button" class="btn btn-sm btn-secondary" disabled>Current User</button>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">No users found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Quizzes Tab -->
            <div class="tab-pane fade" id="v-pills-quizzes" role="tabpanel" aria-labelledby="v-pills-quizzes-tab">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Quiz Management</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Creator</th>
                                        <th>Category</th>
                                        <th>Attempts</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (typeof quizzes !== 'undefined' && quizzes.length > 0) { %>
                                        <% quizzes.forEach(quiz => { %>
                                            <tr>
                                                <td><%= quiz.title %></td>
                                                <td><%= quiz.creator ? quiz.creator.username : 'Unknown' %></td>
                                                <td><%= quiz.category %></td>
                                                <td><%= quiz.attempts %></td>
                                                <td>
                                                    <a href="/quizzes/<%= quiz._id %>" class="btn btn-sm btn-primary">View</a>
                                                    <form action="/quizzes/<%= quiz._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this quiz?');">
                                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">No quizzes found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
