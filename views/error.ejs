<div class="alert alert-danger">
    <h4 class="alert-heading">Error Occurred</h4>
    <p><%= typeof message !== 'undefined' ? message : 'An unexpected error occurred.' %></p>
    <% if (typeof error !== 'undefined' && error.stack && process.env.NODE_ENV === 'development') { %>
        <hr>
        <pre class="mb-0"><%= error.stack %></pre>
    <% } %>
</div>

<a href="/" class="btn btn-primary">Go Home</a>
