<div class="jumbotron text-center bg-light p-5 rounded">
    <h1 class="display-4">Welcome to Quizzaire</h1>
    <p class="lead">Test your IT knowledge with interactive quizzes on programming, networking, databases, and more!</p>
    <hr class="my-4">
    <p>Create your own quizzes or attempt quizzes created by others.</p>
    <p class="lead">
        <a class="btn btn-primary btn-lg" href="/quizzes" role="button">Browse Quizzes</a>
        <% if (typeof user !== 'undefined' && user) { %>
            <a class="btn btn-success btn-lg" href="/quizzes/create/new" role="button">Create Quiz</a>
        <% } else { %>
            <a class="btn btn-success btn-lg" href="/auth/register" role="button">Sign Up</a>
        <% } %>
    </p>
</div>

<% if (typeof featuredQuizzes !== 'undefined' && featuredQuizzes.length > 0) { %>
    <h2 class="mt-5 mb-4">Featured Quizzes</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% featuredQuizzes.forEach(quiz => { %>
            <div class="col">
                <div class="card h-100">
                    <% if (quiz.coverImage) { %>
                        <img src="<%= quiz.coverImage %>" class="card-img-top" alt="<%= quiz.title %>">
                    <% } else { %>
                        <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 150px;">
                            <i class="fas fa-question-circle fa-3x"></i>
                        </div>
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title"><%= quiz.title %></h5>
                        <p class="card-text"><%= quiz.description.substring(0, 100) %><%= quiz.description.length > 100 ? '...' : '' %></p>
                        <p class="card-text"><small class="text-muted">Category: <%= quiz.category %></small></p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <small class="text-muted">By <%= quiz.creator.username %></small>
                        <a href="/quizzes/<%= quiz._id %>" class="btn btn-primary btn-sm">View Quiz</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } %>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <i class="fas fa-laptop-code fa-3x mb-3 text-primary"></i>
                <h3>Programming</h3>
                <p>Test your knowledge on various programming languages, algorithms, and coding concepts.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <i class="fas fa-network-wired fa-3x mb-3 text-primary"></i>
                <h3>Networking</h3>
                <p>Challenge yourself with quizzes on network protocols, topologies, and configurations.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <i class="fas fa-database fa-3x mb-3 text-primary"></i>
                <h3>Databases</h3>
                <p>Explore quizzes on SQL, database management systems, and data modeling.</p>
            </div>
        </div>
    </div>
</div>
